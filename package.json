{
  "private": true,
  "type": "module",
  "browserslist": [
    "last 3 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=development gulp start",
    "build": "cross-env NODE_ENV=production gulp build & gulp imagemin",
    "test": "npm run editorconfig & npm run lint:css & npm run lint:javascript",
    "editorconfig": "editorconfig-cli",
    "lint:html": "gulp validateHtml --input build/*.html --format lint --verbose --errors-only",
    "lint:css": "stylelint \"source/sass/**/*.scss\" --color --fix",
    "lint:javascript": "eslint source/js/ --color --fix",
    "imagemin": "gulp imagemin",
    "webp": "gulp webp"
  },
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/**/*.html",
    "source/**/*.pug",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "nodeW3Cvalidator": {
    "suppressErrors": [
      "Attribute “media” not allowed on element “meta” at this point."
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "7.18.6",
    "@htmlacademy/editorconfig-cli": "1.x",
    "autoprefixer": "10.4.7",
    "babel-loader": "8.2.5",
    "browser-sync": "2.27.10",
    "circular-dependency-plugin": "5.2.2",
    "clean-webpack-plugin": "3.0.0",
    "cross-env": "7.0.3",
    "del": "6.1.1",
    "duplicate-package-checker-webpack-plugin": "3.0.0",
    "eslint": "7.32.0",
    "gulp": "4.0.2",
    "gulp-cached": "^1.1.1",
    "gulp-csso": "4.0.1",
    "gulp-file-include": "2.3.0",
    "gulp-group-css-media-queries": "1.2.2",
    "gulp-html-beautify": "1.0.1",
    "gulp-html-php-picture": "^2.1.2",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "7.1.0",
    "gulp-newer": "^1.4.0",
    "gulp-notify": "^4.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "9.0.1",
    "gulp-rename": "1.4.0",
    "gulp-replace": "^1.1.3",
    "gulp-sass": "5.1.0",
    "gulp-svgstore": "7.0.1",
    "gulp-typograf": "^4.0.3",
    "gulp-version-number": "^0.2.4",
    "gulp-w3c-html-validator": "^5.1.4",
    "gulp-webp": "4.0.1",
    "node-w3c-validator": "^2.0.2",
    "postcss": "^8.4.19",
    "postcss-import": "^15.0.0",
    "postcss-inline-svg": "^5.0.0",
    "sass": "1.53.0",
    "stylelint": "^14",
    "stylelint-config-standard-scss": "^6.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.6.0",
    "stylelint-order": "^5.0.0",
    "webp-converter": "^2.2.3",
    "webp-in-css": "^0.7.0",
    "webpack": "4.42.0",
    "webpack-stream": "5.2.1"
  },
  "engines": {
    "node": ">=16.15.1"
  },
  "dependencies": {
    "nouislider": "^15.6.1",
    "sal.js": "^0.8.5",
    "sweetalert": "^2.1.2",
    "swiper": "^8.4.4"
  }
}
